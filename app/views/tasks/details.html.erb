<h2><%= @task.title %></h2>
<p>Details: <%= @task.details %></p>
<% if @task.completed %>
<p>This task is completed</p>
<% else %>
<p>Task is not completed</p>
<% end %>

<p><%= link_to "Back to list", tasks_path %>
<p><%= link_to "Edit task", edit_task_path %>
<p><%= link_to "Delete task", task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
